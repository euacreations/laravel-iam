{
  "name": "euacreations/laravel-iam",
  "description": "IAM / RBAC package for Laravel",
  "type": "library",
  "license": "MIT",

  "autoload": {
    "psr-4": {
      "EuaCreations\\LaravelIam\\": "src/"
    }
  },

  "extra": {
    "laravel": {
      "providers": [
        "EuaCreations\\LaravelIam\\LaravelIamServiceProvider"
      ]
    }
  },

  "require": {
    "php": "^8.2",
    "illuminate/support": "^11|^12"
  },

  "require-dev": {
    "orchestra/testbench": "^9.0",
    "pestphp/pest": "^3.0"
  },

  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },

  "scripts": {
    "test": "pest"
  },
  "config": {
    "allow-plugins": {
      "pestphp/pest-plugin": true
    }
  }
}
